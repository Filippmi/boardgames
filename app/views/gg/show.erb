<h3><%= @game.title %></h3>
<p>Genre: <%= @game.genre %></p>
<p>Rating: <%= @game.rating %></p>
<p>Number of Player: <%= @game.number_of_players %></p>

<form action="/gamelist/<%= @game.id %>" method="post">
    <div class="row">
        <a href="/gamelist/<%= @game.id %>/edit" class="btn-small">Edit Game</a>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Game" class="btn-small red">
    </div>
</form>